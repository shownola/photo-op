<p id="notice"><%= notice %></p>

<div class="container">
  <div align="center">
    <h1 class="display-3">Images</h1>
  </div>
  
  
  <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th>Picture</th>
        <th>User</th>
        <th>Created At</th>
        <th>Action</th>
        <th colspan="3"></th>
      </tr>
    
  
    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= link_to image.name, image_path(image) %></td>
          <td><%= image_tag(image.picture.url, size: '75x75') %></td>
          <td><%= image.user.try(:email)  %></td>
          <td><%= image.created_at %></td>
          <td><%= link_to 'Show', image %></td>
          <td><%= link_to 'Edit', edit_image_path(image) %></td>
          <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Image', new_image_path %>

</div>